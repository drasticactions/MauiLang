<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="MauiLang.OutputResponseLanguagePage">
    <Grid RowSpacing="5" RowDefinitions="Auto, *, Auto">
        <Label HorizontalOptions="Center" Text="Language"></Label>
        <ListView SelectionMode="Single" ItemSelected="ListView_OnItemSelected" ItemsSource="{Binding Languages}" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Language}"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button HorizontalOptions="Center" Grid.Row="2" Margin="5" Text="Go Back" Clicked="Button_OnClicked" />
    </Grid>
</ContentPage>